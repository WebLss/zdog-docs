<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="description" content="{{description}}" />
  <meta name="viewport" content="width=device-width" />

  <title>Zdog &middot; {{#if page.homepage}}{{description}}{{else}}{{page.title}}{{/if}}</title>

  {{#if dev}}
    {{#each stylesheets}}
      <link rel="stylesheet" href="../{{this}}" />
    {{/each}}
  {{else}}
    <link rel="stylesheet" href="{{@file.rootpath}}zdog-docs.css?v{{version}}" />
  {{/if}}

  {{! Twitter Cards }}
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@metafizzyco" />
  <meta name="twitter:url" content="https://zzz.dog/{{@file.basename}}" />
  <meta name="twitter:title" content="Zdog{{#unless page.homepage}} {{page.title}}{{/unless}}" />
  <meta name="twitter:description" content="{{description}}" />
  <meta name="twitter:image" content="https://zzz.dog/img/zdog-thumbnail.png" />

</head>
<body data-basename="{{@file.basename}}">

<div class="container">

  <div class="container__sidebar masthead">
    <div class="masthead__logo">
      {{> zdog-logo }}
    </div>
    <nav class="nav masthead__nav">
      {{> site-nav }}
      <ul class="page-nav"></ul>
    </nav>
  </div>

  <div class="container__main">
    {{#if page.homepage}}
      {{> hero}}
    {{/if}}

    {{#if page.title}}
      <h1 class="page-title">{{page.title}}</h1>
    {{/if}}
{{{main}}}

    {{> site-footer }}
  </div>

</div> {{! .container }}

{{#if dev}}
  {{#each jsPaths}}
    <script src="../{{this}}"></script>
  {{/each}}
{{else}}
  <script src="{{@file.rootpath}}zdog-docs.min.js?v{{version}}"></script>
{{/if}}

{{#unless dev}}
  <script>
    window.ga = function() { ga.q.push(arguments) }; ga.q = []; ga.l = +new Date;
    ga('create','UA-58739927-9','auto'); ga('send','pageview');
  </script>
  <script src="https://www.google-analytics.com/analytics.js" async defer></script>
{{/unless}}

</body>
</html>
